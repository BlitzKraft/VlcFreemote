<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/wPlayerWidget_BtnPlayPause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/wPlayer_BtnPlayPause"
        android:src="@android:drawable/ic_media_play"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        android:tint="@android:color/holo_blue_light" />

    <ImageButton
        android:id="@+id/wPlayerWidget_OpenApp"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_vlcfreemote_main_icon"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/wPlayer_ToggleMoreOptions" />

    <ImageButton
        android:id="@+id/wPlayerWidget_BtnNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/wPlayer_BtnNext"
        android:src="@android:drawable/ic_media_next"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        android:tint="@android:color/holo_blue_light"/>

</LinearLayout>
